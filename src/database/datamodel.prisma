type User {
  id: ID! @unique
  email: String @unique
  firstName: String!
  middleName: String
  lastName: String!
  password: String!
  createdAt: DateTime!
  updatedAt: DateTime!
  lastLoggedIn: DateTime
  role: Role! @default(value: Physician)
  orders: [Order!]!
}

enum Role { 
  Admin
  Owner
  Physician
  Patient
  Provider
  Disabled
}

type Order {
  id: ID! @unique
  item: String!
  price: Float!
  createdAt: DateTime!
  updatedAt: DateTime!
  provider: String!
  owner: User!
}

